@model CarDealer.Models.ViewModels.Cars.CarWithPartsViewModel

@{
    ViewBag.Title = "Car";
}

<h2>Car</h2>

<p>
    @Html.ActionLink("Add New Car", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Car.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car.TravelledDistance)
        </th>
        <th></th>
    </tr>

    <tr>
        <td>
            @Html.DisplayFor(model => model.Car.Make)
        </td>
        <td>
            @Html.DisplayFor(model => model.Car.Model)
        </td>
        <td>
            @Html.DisplayFor(model => model.Car.TravelledDistance)
        </td>
    </tr>
    <tr>
        <td></td>
        <td>
            <h2>Parts</h2>
        </td>
        <td></td>
    </tr>

    @for (int i = 0, j = 1; i < Model.Parts.Count; i++, j++)
    {
        <tr>
            <td>
                @j.
            </td>
            <td>
                @Model.Parts[i].Name
            </td>
            <td>
                @Model.Parts[i].Price
            </td>
            <td>
                @using (Html.BeginForm("DeletePart", "Cars", FormMethod.Post))
                {
                    @Html.Hidden("partId", @Model.Parts[i].Id)
                    @Html.Hidden("carId", @Model.Car.Id)
                    <input type="submit" value="DELETE" class="btn btn-primary form-control" onclick="return confirm('Are you sure you want to delete this part?');" />
                }

            </td>
            <td>
                @Html.ActionLink("EDIT", "EditPart", new { partId = @Model.Parts[i].Id, carId = Model.Car.Id },
                                                    new { @class = "btn btn-primary form-control" })
            </td>
        </tr>
    }
    <br />

</table>
@Html.ActionLink("Add part", "AddPartToCar", "Cars", new { carId = @Model.Car.Id }, new { @class = "form-control btn btn-primary" })


