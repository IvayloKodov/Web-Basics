@model IEnumerable<CarDealer.Models.ViewModels.Cars.CarViewModel>

@{
    ViewBag.Title = "Cars";
}

<h2> @Model.First().Make</h2>

<p>
    @Html.ActionLink("Add New Car", "Add")
</p>

<table class="table">
    <tr>
        <th>

            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TravelledDistance)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelledDistance)
            </td>
            <td>
                @Html.ActionLink("Details", "Parts", "Cars", new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>
